<?php
/**
 * Contents/Content view
 *
 * @package photolab
 */
?><?php do_action( 'photolab_before_post' ); ?>
<article id="post-<?php echo(get_the_ID()); ?>" class="<?php echo(join( ' ', get_post_class() )); ?> col-md-12">

	<div class="entry-wrapper">
		<span class="entry-border"><div class="dashicons dashicons-editor-alignleft"></div></span>
		<?php if( has_post_thumbnail() ): ?>
			<figure class="featured-thumbnail <?php echo(esc_attr( Misc_Model::getBlogImage() )); ?>">
				<a href="<?php echo(get_permalink()); ?>">
					<?php echo(get_the_post_thumbnail( get_the_ID(), Misc_Model::getBlogImage() )); ?>					<span class="img-mask"></span>
				</a>
			</figure>
		<?php endif; ?>
		<div class="entry-content-wrapper">
			<header class="entry-header">
				<?php if( 'post' == get_post_type() ): ?>
					<div class="entry-meta">
						<?php echo View::make('blocks/posted-on', Utils::array_except(get_defined_vars(), array('__data', '__path'))); ?>
					</div><!-- .entry-meta -->
				<?php endif; ?>
				<?php echo(the_title( sprintf( '<h2 class="entry-title"><a href="%s" rel="bookmark">', esc_url( get_permalink() ) ), '</a></h2>', false )); ?>			</header><!-- .entry-header -->

			<?php if( is_search() ): ?>
			<div class="entry-summary">
				<?php echo View::make('blocks/excerpt', Utils::array_except(get_defined_vars(), array('__data', '__path'))); ?>
			</div><!-- .entry-summary -->
			<?php else: ?>
			<div class="entry-content">
				<?php if( 'excerpt' == $blog_content ): ?>
					<?php echo View::make('blocks/excerpt', Utils::array_except(get_defined_vars(), array('__data', '__path'))); ?>
				<?php else: ?>
					<?php if( !$is_show_title_on_header ): ?>
						<?php echo View::make('blocks/title', Utils::array_except(get_defined_vars(), array('__data', '__path'))); ?>
					<?php endif; ?>
					<?php echo(get_the_content( __( 'Continue reading <span class="meta-nav">&rarr;</span>', 'photolab' ) )); ?>					<?php echo(wp_link_pages( 
						[
							'before' => '<div class="page-links">' . __( 'Pages:', 'photolab' ),
							'after'  => '</div>',
							'echo'   => false
						] 
					)); ?>				<?php endif; ?>
			</div><!-- .entry-content -->
			<?php endif; ?>
			<?php echo View::make('blocks/read-more-button', Utils::array_except(get_defined_vars(), array('__data', '__path'))); ?>

		</div><!-- .entry-wrapper -->
		<div class="clear"></div>
	</div><!-- .entry-content-wrapper -->
</article><!-- #post-## -->
